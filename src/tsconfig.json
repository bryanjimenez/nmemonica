{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    // "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2017", "es2021.String"],
    "outDir": "../tsc-out/",
    "sourceMap": true,
  },
  "include": ["./helper/*", "./actions/*", "./components/Forms/*", "./components/Pages/*"],
  // "files": ["./helper/JapaneseText.js"]
}
