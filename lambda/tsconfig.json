{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "functions",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "compileOnSave": true,
  "exclude": ["./node_modules"],
  "include": ["**/*.ts"]
}
