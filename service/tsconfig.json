{
  // Data Service
  "extends": "../tsconfig.json",

  "compilerOptions": {
    "composite": true,
    "rootDir": "../",
    "outDir": "../.tsc-dist/",

    "strict": true,
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",

    "allowJs": true, // just for environment-host.cjs
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    ".",
    "../src/typings/raw.js",
    "../environment-host.cjs"
  ]
}
